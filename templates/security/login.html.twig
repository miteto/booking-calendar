{% extends 'base.html.twig' %}

{% block title %}{{ 'security.title'|trans }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        {{ 'security.signed_in_as'|trans({'%user%': app.user.userIdentifier}) }} <a href="{{ path('app_logout') }}">{{ 'nav.logout'|trans }}</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">{{ 'security.please_sign_in'|trans }}</h1>
                <label for="inputEmail">{{ 'security.email'|trans }}</label>
                <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control mb-3" autocomplete="email" required autofocus>
                <label for="inputPassword">{{ 'security.password'|trans }}</label>
                <input type="password" name="_password" id="inputPassword" class="form-control mb-3" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <button class="btn btn-lg btn-primary" type="submit">
                    {{ 'security.sign_in'|trans }}
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
